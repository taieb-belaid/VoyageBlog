@model Post
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Post</title>
    <link rel="stylesheet" href="~/css/post.css" />
</head>
<body>
    <h1>Update your Post</h1>
    <section class="vh-100" >
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card text-black" style="border-radius: 25px;">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">Make your changes</p>

                                    <form class="mx-1 mx-md-4" action="/update/@Model.PostId"  method="post" enctype="multipart/form-data">
                                        <input type="hidden" value="@ViewBag.User.UserId" asp-for="UserId">
                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" asp-for="Title"  class="form-control" />
                                                <label class="form-label" >Title</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <input type="text" id="urlInput" asp-for="ImageUrl"  class="form-control" />
                                                <label class="form-label" >Image Url</label>
                                            </div>
                                        </div>

                                        <div class="d-flex flex-row align-items-center mb-4">
                                            <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                                            <div class="form-outline flex-fill mb-0">
                                                <textarea class="form-control" asp-for="Description" rows="4"></textarea>
                                                <label class="form-label" >Description</label>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                                            <input type="submit" value="Update" class="btn btn-warning btn-lg" />
                                        </div>

                                    </form>

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                        <img id="imageTag" src="" height="400px" width="400px">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <script>
const urlInput = document.getElementById('urlInput');
const imageTag = document.getElementById('imageTag');

// Adding an event listener to the input field
urlInput.addEventListener('change', function() {
  // Get the value from the input
    const imageUrl = urlInput.value;

  // Set the image source
    imageTag.src = imageUrl;
});
    </script>
</body>
</html>