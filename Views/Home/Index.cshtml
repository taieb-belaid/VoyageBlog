@model Login
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
</head>

<body>
    <div class="container">

        <div class="title text-center">
            <h2 class="title">Join The Voyage</h5>
                <p class="slogant">“The world is a book and those who do not travel read only one page.”</p>
                <p class="slogant-author">― Saint Augustine</p>
        </div>

        <section class="vh-100">
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-6 text-black">
            <div class="d-flex align-items-center h-custom-2 px-5 ms-xl-4 mt-5 pt-5 pt-xl-0 mt-xl-n5">

                <form style="width: 23rem;" action="/user/login" method="post">

                    <h3 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Log in</h3>

                    <div class="form-outline mb-2">
                        <input type="email" asp-for="LoginEmail" class="form-control form-control-lg" />
                        <label class="form-label" >Email address</label>
                        <span asp-validation-for="LoginEmail" class="text-danger"></span>
                    </div>

                    <div class="form-outline mb-2">
                        <input type="password" id="form2Example28" asp-for="LoginPassword" class="form-control form-control-lg" />
                        <label class="form-label" >Password</label>
                        <span asp-validation-for="LoginPassword" class="text-danger"></span>
                    </div>

                    <div class="pt-1 mb-2 text-center">
                        <input type="submit" value="Login" class="btn btn-info btn-lg btn-block" />
                    </div>
                    <p>Don't have an account? <a href="/signup" class="link-info">Register here</a></p>
                </form>

            </div>

        </div>
        <div class="col-sm-6 px-0 d-none d-sm-block">
            <div class="man-on-grass"></div>
        </div>
    </div>
</div>
</section>

    </div>
</body>

</html>